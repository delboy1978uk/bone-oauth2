{
  "name": "delboy1978uk/bone-oauth2",
  "description": "OAuth2 functionality for Bone Framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Derek Stephen McLean",
      "email": "delboy1978uk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-curl": "*",
    "ext-json": "*",
    "laminas/laminas-diactoros": "^3.3",
    "league/oauth2-server": "^8.5",
    "boneframework/bone": "^3.11",
    "delboy1978uk/bone-doctrine": "^2.0",
    "delboy1978uk/bone-user": "^2.4",
    "laminas/laminas-uri": "^2.11"
  }
  ,
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "delboy1978uk/dev-tools": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Bone\\OAuth2\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "suggest": {
    "delboy1978uk/bone-open-api": "Open API documentation"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  }
}
